# Cadence Production Environment Variables
# Copy this file to .env and fill in your values

#------------------------------------------------------------------------------
# DATABASE CREDENTIALS (REQUIRED)
#------------------------------------------------------------------------------

# PostgreSQL
POSTGRES_DB=cadence
POSTGRES_USER=cadence
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_PORT=5432

# MongoDB
MONGO_ROOT_USER=cadence
MONGO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGO_PORT=27017

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
REDIS_PORT=6379

#------------------------------------------------------------------------------
# BACKUP CONFIGURATION
#------------------------------------------------------------------------------

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention in days
BACKUP_RETENTION_DAYS=30

#------------------------------------------------------------------------------
# DATA DIRECTORY
#------------------------------------------------------------------------------

# Root directory for persistent data
DATA_DIR=/var/lib/cadence

#------------------------------------------------------------------------------
# RESOURCE LIMITS (Optional)
#------------------------------------------------------------------------------

# PostgreSQL
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=1GB
POSTGRES_EFFECTIVE_CACHE_SIZE=3GB

# MongoDB
MONGO_CACHE_SIZE_GB=2
MONGO_MAX_CONNECTIONS=500

# Redis
REDIS_MAX_MEMORY=2gb
REDIS_MAX_CLIENTS=10000

#------------------------------------------------------------------------------
# TLS/SSL CERTIFICATES (Paths inside containers)
#------------------------------------------------------------------------------

# PostgreSQL
POSTGRES_SSL_CERT=/var/lib/postgresql/server.crt
POSTGRES_SSL_KEY=/var/lib/postgresql/server.key

# MongoDB
MONGO_SSL_CERT=/etc/ssl/mongodb/mongodb.pem
MONGO_SSL_CA=/etc/ssl/mongodb/ca.pem

# Redis
REDIS_SSL_CERT=/etc/redis/redis.crt
REDIS_SSL_KEY=/etc/redis/redis.key
REDIS_SSL_CA=/etc/redis/ca.crt

#------------------------------------------------------------------------------
# MONITORING (Optional)
#------------------------------------------------------------------------------

# Webhook URL for backup notifications
NOTIFICATION_WEBHOOK_URL=https://your-monitoring-service.com/webhook

#------------------------------------------------------------------------------
# NETWORK (Optional)
#------------------------------------------------------------------------------

# Custom subnet for Docker network
DOCKER_SUBNET=172.28.0.0/16
