# Echo ü§ñ Multi-agents AI Framework - Sample Environment File
# Copy to `.env` and adjust values as needed.

# --- Application ---
CADENCE_APP_NAME="Echo ü§ñ Multi-agents AI Framework"
CADENCE_DEBUG=false

# --- LLM Provider Configuration ---
# One of: openai | azure-openai (alias: azure) | anthropic (alias: claude) | google (alias: gemini)
CADENCE_DEFAULT_LLM_PROVIDER=openai
CADENCE_DEFAULT_LLM_MODEL=gpt-4.1
CADENCE_OPENAI_DEFAULT_MODEL=gpt-4.1
CADENCE_AZURE_OPENAI_DEFAULT_MODEL=gpt-4.1
CADENCE_ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514
CADENCE_GEMINI_DEFAULT_MODEL=gemini-2.5-flash

# --- API Keys (set the one(s) required by your provider) ---
CADENCE_OPENAI_API_KEY=
CADENCE_AZURE_OPENAI_API_KEY=
CADENCE_ANTHROPIC_API_KEY=
CADENCE_GOOGLE_API_KEY=

# --- Azure OpenAI (only if using azure-openai/azure) ---
CADENCE_AZURE_OPENAI_ENDPOINT=
CADENCE_AZURE_OPENAI_API_VERSION=2024-02-15-preview
CADENCE_AZURE_OPENAI_DEPLOYMENT=


# --- Plugin Configuration ---
# Single directory path or JSON array of directories
# Example JSON array: ["./src/plugins","./custom_plugins","./third_party_plugins"]
# Default in code is ./src/plugins
CADENCE_PLUGINS_DIR=./src/plugins
CADENCE_ENABLE_GIT_PLUGINS=true
CADENCE_ENABLE_PLUGIN_VALIDATION=true

# --- API Server ---
CADENCE_API_HOST=0.0.0.0
CADENCE_API_PORT=8000
CADENCE_CORS_ORIGINS=["*"]

# --- Storage Backend Configuration ---
# Conversation Storage Backend Options:
# - "memory"      ‚Üí InMemoryConversationRepository (fast, no persistence)
# - "postgresql"  ‚Üí SQLAlchemy + PostgreSQL (production, 75% storage optimization)
CADENCE_CONVERSATION_STORAGE_BACKEND=memory

# --- Database Configuration ---
# PostgreSQL Configuration (Primary Database)
# CADENCE_POSTGRES_URL=postgresql+asyncpg://echo_user:secure_password@localhost:5432/echo_db
# CADENCE_POSTGRES_POOL_SIZE=20
# CADENCE_POSTGRES_MAX_OVERFLOW=30

# Redis Configuration (Session Store & Caching)
CADENCE_REDIS_URL=
# CADENCE_REDIS_POOL_SIZE=20



# --- Session Configuration ---
CADENCE_SESSION_TIMEOUT=3600
CADENCE_MAX_SESSION_HISTORY=100

# --- Processing Configuration ---
CADENCE_MAX_AGENT_HOPS=25
CADENCE_MAX_TOOL_HOPS=50
CADENCE_GRAPH_RECURSION_LIMIT=100

# --- SDK Hybrid Plugin Discovery (optional; echo_sdk utilities) ---
# Enable directory-based plugin discovery via the SDK helpers
# CADENCE_ENABLE_DIRECTORY_PLUGINS=true
# Comma/semicolon-separated list of absolute or relative directories
# CADENCE_PLUGIN_DIRS=/abs/path/one,/abs/path/two
# Default directory used by SDK discovery if present
# CADENCE_PLUGIN_DIR=./plugins


# ============================================================================
# QUICK START CONFIGURATIONS
# ============================================================================

